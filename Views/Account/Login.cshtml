@model langfvn.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    .alert-text {
        color: red;
    }
</style>
<div class="login">
    <div class="container pb-5">
        <div class="row">
            <div class="col-md-5 col-12" style="margin: auto">
                <nav class="mt-4 mb-4">
                    <div class="nav nav-tabs"
                         id="nav-tab"
                         role="tablist">
                        <a class="nav-item nav-link active"
                           id="nav-login-tab"
                           data-toggle="tab"
                           href="#nav-login"
                           role="tab"
                           aria-controls="nav-login"
                           aria-selected="true">Đăng nhập</a>
                        <a class="nav-item nav-link"
                           href="/account/register">Tạo tài khoản</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active"
                         id="nav-login"
                         role="tabpanel"
                         aria-labelledby="nav-login-tab">
                        @using (Html.BeginForm("login", "account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">

                                @if (ViewBag.SuccessMsg != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>@ViewBag.SuccessMsg</strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }

                                @Html.TextBoxFor(model => model.UserName, new { @type = "email", @placeholder = "Email", @class = "form-control", @autofocus = "@autofocus" })
                                <span style="color:red">
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </span>
                            </div>
                            <div class="form-group">

                                @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @placeholder = "Mật khẩu" })
                                <span style="color:red">
                                    @Html.ValidationMessageFor(m => m.Password)
                                </span>
                                @if (@ViewBag.LoginFail != null)
                                {
                                    <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
                                        <strong>@ViewBag.LoginFail</strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                            </div>
                            <div class="text-center">
                                <button type="submit"
                                        class="btn btn-secondary" style="background-color: #aa0b0b;">
                                    Đăng nhập
                                </button>
                            </div>
                        }
                        <hr />

                        <div class="text-center">hoặc</div>
                        <hr />
                        <div class="form-group text-center">
                            <a href=""
                               class="btn btn-danger mr-2"
                               style="
                                                background-color: #db4437;
                                                border-color: #db4437;
                                            ">
                                <i class="fab fa-google"></i>
                                Google
                            </a>
                            <a href=""
                               class="btn btn-primary ml-2"
                               style="
                                                background-color: #3b5998;
                                                border-color: #3b5998;
                                            ">
                                <i class="fab fa-facebook-f"></i>
                                Facebook
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
