@model langfvn.Models.Account
@{
    ViewBag.Title = "UpdateInformation";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="profile">
    <div class="container pb-5">
        <div class="row">
            <div class="col-md-6 col-12">
                <div class="row mb-2">
                    <div class="col-12 text-center">
                        <img src="~/Content/main/img/user.svg"
                             class="rounded-pill m-3" />
                    </div>
                    <div class="col-12">
                        @if (Model.Unit == null && Model.Address == null)
                        {
                            <div class="alert alert-warning" role="alert">
                                Chưa điền đầy đủ thông tin!
                            </div>
                        }
                        @if (ViewBag.result != null)
                        {
                            <div id="updateResutl" class="alert alert-success" role="alert">
                                <b>@ViewBag.result</b>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-12">
                <div class="row mb-2">
                    <div class="col">
                        <!-------------------------------------------------->
                        @using (Html.BeginForm("update", "account"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.UserID)

                            <div class="form-group">
                                @Html.LabelFor(m => m.FullName, "Họ và tên")
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FullName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Phone, "Số điện thoại")
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Phone)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address, "Nơi ở hiện tại")
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Address)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Unit, "Trường/Đơn vị")
                                @Html.TextBoxFor(m => m.Unit, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Unit)
                            </div>
                            <a href="/account/profile" class="btn btn-secondary">Hủy bỏ</a>
                            <button type="submit" value="Save" class="btn btn-primary">Lưu lại</button>
                        }

                        <!-------------------------------------------------->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
