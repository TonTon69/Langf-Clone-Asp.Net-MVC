@model IEnumerable<langfvn.Models.News>

@foreach (var item in Model)
{
    <div class="col col-md-6">
        <div class="box box-bounce p-0 ">
            <div class="card box-shadow" style="width: 15rem; border-radius:3%">
                <div class="box-img">
                    <img class="card-img-top" src="@item.Image">
                </div>
                <div class="card-body text-center">
                    <div class="box-txt">
                        <h5 class="card-title">
                           @item.Title
                        </h5>
                        <div class="is-divider-text"></div>
                        <p class="card-text">
                            @item.Content
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

