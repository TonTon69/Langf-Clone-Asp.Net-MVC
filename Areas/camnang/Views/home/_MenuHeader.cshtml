        <li>
            <a href="">Giới thiệu</a>
        </li>
        <li>
            <a href="">Khuyến mãi</a>
        </li>
        @foreach (var item in Model)
        {
            <li class="dropdown">
                <a href="" class="dropbtn">@item.CNewsName</a>
                <i id="icon-angel-down" class="fas fa-angle-down"></i>
                <div class="dropdown-content">
                    @{
                        Html.RenderAction("MenuHeaderCon", "Home", new { id = item.CNewsID });
                    }
                </div>
            </li>
        }
        <li class="">
            <a href="">
                <i class="fas fa-search" style="font-size: 16px"></i>
            </a>
        </li>
    </ul>
</div>
