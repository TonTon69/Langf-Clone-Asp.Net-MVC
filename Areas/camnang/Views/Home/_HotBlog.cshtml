@model IEnumerable<langfvn.Models.News>

@foreach (var item in Model)
{
    <div class="col col-md-3 col-top">
        <div class="col-inner-news">
            <div class="box box-bounce text-center">
                <a href="@Url.Action("details", "news", new { id = item.NewsID, name = item.Title})">
                    <div class="box-images" style="border-radius: 4%;">
                        <img src="@item.Image">
                    </div>
                    <div class="box-texts text-center">
                        <div class="box-texts-inner">
                            <p class="cat-label text-uppercase op-7">@item.KindOfNew.CategoryNew.CNewsName @item.KindOfNew.KonName</p>
                            <h5 class="post-title">
                                <span>[@item.Account.FullName] - </span>
                                <span>
                                    @item.Title
                                </span>
                            </h5>
                            <div class="post-meta">@item.CreatedDate.ToString("MMM d, yyyy")</div>
                            <div class="is-divider"></div>
                            <div class="from-blog">
                                @if (item.Content.Length <= 100)
                                {
                                    @Html.Raw(@item.Content)
                                }
                                else
                                {
                                    @Html.Raw(@item.Content.ToString().Substring(0, 100) + "...")
                                }
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
}