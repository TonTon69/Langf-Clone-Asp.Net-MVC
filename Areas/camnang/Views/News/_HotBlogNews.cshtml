@model IEnumerable<langfvn.Models.News>

@foreach (var item in Model)
{
<div class="row mb-3">
    <div class="col-xs-12 col-sm-12 col-md-4 p-0">
        <a href="@Url.Action("details", "news", new { name = item.Title })">
            <div class="d-block mb-1">
                <img style="max-width: none" src="@item.Image"
                     width="80"
                     height="80" />
            </div>
            <span>(@item.TotalView)</span>
        </a>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-8">
        <a href="@Url.Action("details", "news", new { name = item.Title })">
            <h6>
                @item.Title
            </h6>
            <span>@item.CreatedDate.ToString("MMM d, yyyy")</span>
        </a>
    </div>
</div>}
