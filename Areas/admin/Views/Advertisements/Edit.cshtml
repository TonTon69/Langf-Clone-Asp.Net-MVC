@model langfvn.Models.Advertisement

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>QUẢN LÝ QUẢNG CÁO</h3>
<div>
    <i class="fas fa-undo-alt"></i>
    <a href="/admin/advertisements">Quay về danh sách quảng cáo</a>
</div>
<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">CHỈNH SỬA QUẢNG CÁO #@Model.AdID</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.AdID)

                <div class="form-group">
                    @Html.LabelFor(model => model.AdTitle, "Tiều đề", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AdTitle, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.AdTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Image, "Ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Image, 3, 50, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Visible, "Trạng thái", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @{
                            var htmlAttributes = ViewData["htmlAttributes"] ?? new { };

                            @Html.DropDownListFor(model => model.Visible,
                                new List<SelectListItem>(2) {
                                new SelectListItem { Text = "Hiện", Value = "true"},
                                new SelectListItem { Text = "Ẩn", Value = "false"}
                            }, htmlAttributes = new { @class = "form-control" })
                        }
                        @Html.ValidationMessageFor(model => model.Visible, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
