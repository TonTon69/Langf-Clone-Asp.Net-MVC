@model langfvn.Models.Account

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>QUẢN LÝ NGƯỜI DÙNG</h3>
<div>
    <a href="/admin/accounts" class="btn btn-success">
        <i class="fas fa-undo-alt"></i>
        Quay về danh sách người dùng
    </a>
</div>
<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">XÓA NGƯỜI DÙNG #@Model.UserID</h6>
    </div>
    <div class="card-body">
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">ID</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.UserID)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Họ và tên</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Email</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Số điện thoại</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Địa chỉ</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Trường/Đơn vị</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Unit)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Role</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Role.RoleName)
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">

                @if (Model.Role.RoleName == "Admin")
                {
                    <div class="alert alert-warning alert-dismissible fade show col-md-4" role="alert">
                        <strong>Bạn không thể xóa chính mình!</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <input type="submit" value="Xóa" class="btn btn-danger" disabled />
                }
                else
                {
                    <div class="alert alert-warning alert-dismissible fade show col-md-4" role="alert">
                        <strong>Bạn có chắc chắn muốn xóa?</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </div>
        }
    </div>
</div>
