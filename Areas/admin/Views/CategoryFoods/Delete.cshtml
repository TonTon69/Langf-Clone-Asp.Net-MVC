@model langfvn.Models.CategoryFood

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>QUẢN LÝ THỂ LOẠI MÓN ĂN</h3>
<div>
    <i class="fas fa-undo-alt"></i>
    <a href="/admin/categoryfoods">Quay về danh sách thể loại món ăn</a>
</div>
<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">XÓA THỂ LOẠI MÓN ĂN #@Model.CFoodID</h6>
    </div>
    <div class="card-body">
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">ID:</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.CFoodID)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Thể loại món ăn:</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.CFoodName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Ảnh:</label>
            <div class="col-sm-10">
                <img src="@Model.Image" width="65" height="65" style="object-fit:cover" />
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Ngày khởi tạo:</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <p class="text-danger">Bạn có chắc chắc muốn xóa?</p>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
        }
    </div>
</div>


