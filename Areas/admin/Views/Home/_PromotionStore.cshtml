@model IEnumerable<langfvn.Models.Store>

@foreach (var item in Model)
{
<div class="row mb-3 m-0">
    <div class="col-xs-12 col-sm-12 col-md-2 p-0">
        <div class="d-block mb-1">
            <img style="object-fit: cover" src="@item.Image" width="80" height="80" />
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-10">
        <h6 style="color: #800100"><b>@item.StoreName</b></h6>
        <p class="m-0"><b>Địa chỉ:</b> @item.Address</p>
        <p class="m-0"><b>Khuyến mãi:</b> @item.NoteDiscount</p>
    </div>
</div>}
