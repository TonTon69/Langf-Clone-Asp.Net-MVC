@model langfvn.Models.Store

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>QUẢN LÝ CỬA HÀNG</h3>
<div>
    <i class="fas fa-undo-alt"></i>
    <a href="/admin/stores">Quay về danh sách cửa hàng</a>
</div>
<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">CHI TIẾT CỬA HÀNG #@Model.StoreID</h6>
    </div>

    <div class="card-body">
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">ID</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.StoreID)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Khu vực</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Place.PlaceName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Tên cửa hàng</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.StoreName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Địa chỉ</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Ảnh</label>
            <div class="col-sm-10">
                <img src="@Model.Image" width="150" height="150" style="object-fit:cover" />
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Ghi chú ưu đãi</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.NoteDiscount)
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <p class="text-danger">Bạn có chắc chắc muốn xóa?</p>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
        }
    </div>
</div>



