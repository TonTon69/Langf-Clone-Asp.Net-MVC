@model langfvn.Models.News

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>QUẢN LÝ TIN TỨC</h3>
<div>
    <a href="/admin/news" class="btn btn-success">
        <i class="fas fa-undo-alt"></i>
        Quay về danh sách tin tức
    </a>
</div>
<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">XÓA TIN TỨC #@Model.NewsID</h6>
    </div>
    <div class="card-body">
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">ID</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.NewsID)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Thể loại tin</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.KindOfNew.CategoryNew.CNewsName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Loại tin</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.KindOfNew.KonName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Tiêu đề</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Ảnh</label>
            <div class="col-sm-10">
                <img src="@Model.Image" width="450" height="200" class="shadow" style="object-fit:cover" />
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Nội dung</label>
            <div class="col-sm-10 text-justify">
                @Html.Raw(@Model.Content)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Số lượt xem</label>
            <div class="col-sm-10 text-justify">
                @Html.DisplayFor(model => model.TotalView)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Được tạo bởi</label>
            <div class="col-sm-10 text-justify">
                @Html.DisplayFor(model => model.Account.FullName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Ngày khởi tạo</label>
            <div class="col-sm-10 text-justify">
                @Html.DisplayFor(model => model.CreatedDate)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="alert alert-warning alert-dismissible fade show col-md-4 mt-4" role="alert">
                    <strong>Bạn có chắc chắn muốn xóa?</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
        }
    </div>
</div>

