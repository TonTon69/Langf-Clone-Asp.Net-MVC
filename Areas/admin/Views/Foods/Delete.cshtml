@model langfvn.Models.Food

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>QUẢN LÝ MÓN ĂN</h3>
<div>
    <a href="/admin/foods" class="btn btn-success">
        <i class="fas fa-undo-alt"></i>
        Quay về danh sách món ăn
    </a>
</div>
<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">XÓA MÓN ĂN #@Model.FoodID</h6>
    </div>

    <div class="card-body">
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">ID</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.FoodID)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Loại món ăn</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.KindOfFood.KofName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Tên món ăn</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.FoodName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Giá</label>
            <div class="col-sm-10">
                @String.Format("{0:0,0}", @Model.FoodPrice) đ
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Mô tả</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="alert alert-warning alert-dismissible fade show col-md-4 mt-4" role="alert">
                    <strong>Bạn có chắc chắn muốn xóa?</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
