@model langfvn.Models.KindOfNew

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>QUẢN LÝ LOẠI TIN</h3>
<div>
    <i class="fas fa-undo-alt"></i>
    <a href="/admin/kindofnews">Quay về danh sách loại tin</a>
</div>
<div class="card shadow mb-4 mt-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">XÓA LOẠI TIN #@Model.KonID</h6>
    </div>
    <div class="card-body">
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">ID</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.KonID)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Thể loại tin</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryNew.CNewsName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Loại tin</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.KonName)
            </div>
        </div>
        <div class="form-group row align-items-center mb-0">
            <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">Ngày khởi tạo</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="alert alert-warning alert-dismissible fade show col-md-4" role="alert">
                    <strong>Bạn có chắc chắn muốn xóa?</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
        }
    </div>
</div>

